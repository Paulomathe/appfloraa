{
  "expo": {
    "name": "PDV App",
    "slug": "appflora",
    "version": "1.1.0",
    "orientation": "portrait",
    "icon": "./assets/images/iconeApp.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/loading.png",
      "resizeMode": "contain",
      "backgroundColor": "#00A551"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.devapp.pdvapp",
      "infoPlist": {
        "NSCameraUsageDescription": "Este aplicativo usa a câmera para escanear códigos de barras e QR codes",
        "NSPhotoLibraryUsageDescription": "Este aplicativo precisa de acesso à galeria para escolher imagens de produtos",
        "NSLocationWhenInUseUsageDescription": "Este aplicativo usa sua localização para mostrar lojas próximas"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptiveIconApp.png",
        "backgroundColor": "#00A551"
      },
      "package": "com.devapp.pdvapp",
      "permissions": [
        "INTERNET",
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION"
      ],
      "softwareKeyboardLayoutMode": "pan"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/iconeApp.png"
    },
    "plugins": [
      "expo-router"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "a061961b-c166-41bc-b0e9-81287d18753b"
      }
    }
  }
}
